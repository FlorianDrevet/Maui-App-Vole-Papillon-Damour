<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShopAppVpd.ViewModels"
             x:Class="ShopAppVpd.Views.ProductCard">

    <Frame Padding="10"
           CornerRadius="10"
           BackgroundColor="{StaticResource White}"
           BorderColor="{StaticResource Tertiary}"
           HasShadow="False"
           WidthRequest="150"
           HeightRequest="180">

        <Frame.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=AddToCartCommand}"
                CommandParameter="{Binding .}" />
        </Frame.GestureRecognizers>

        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="5">

            <!-- Nom -->
            <Label Text="{Binding Name}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   FontSize="16"
                   TextColor="{StaticResource Primary}" />

            <!-- Image -->
            <Image Source="{Binding UrlImage}"
                   WidthRequest="80"
                   HeightRequest="80"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <!-- Prix -->
            <Label Text="{Binding Price, StringFormat='{0:F2} â‚¬'}"
                   FontSize="14"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

    </Frame>
</ContentView>